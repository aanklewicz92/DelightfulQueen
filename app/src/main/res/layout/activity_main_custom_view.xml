<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_red_700"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <com.droidsonroids.awesomeprogressbar.AwesomeProgressBar
        android:id="@+id/super_awesome_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:padding="@dimen/default_layout_padding"
        apb:animationDuration="1000"
        apb:radius="60dp"
        apb:stroke="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/super_awesome_progress_bar"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/default_progress_bar_color"
            android:text="@string/play_success"
            tools:ignore="ButtonStyle"/>

        <Button
            android:id="@+id/button_failure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/default_progress_bar_color"
            android:text="@string/play_failure"
            tools:ignore="ButtonStyle"/>
    </LinearLayout>

</RelativeLayout>
